  <% if (allCodeIoEvents.length > 0) { %>
      <div class="event-card-container">
          <% allCodeIoEvents.forEach(event => { %>
              <div class="event-card">
                  <h2><%= event.eventName %></h2>
                  <p><%= event.eventDesc %></p>
                  <button class="register-button" onclick="registerForEvent('<%= event._id %>', '<%= event.googleFormLink %>')" style="color: #262626; background-color: rgb(247, 176, 253);">Register</button>


              </div>
          <% }); %>
      </div>
  <% } else { %>
      <p>No events to display for Code_IO.</p>
  <% } %>
</section>

<script>
  function registerForEvent(eventId,googleform) {
      // Send a request to your server to update the user's registration in the database
      fetch(`/register-event/${eventId}`, {
          method: 'POST',
      })
      .then(response => {
          if (response.ok) {
              // Redirect the user to the Google Form link
              window.location.href = googleform || 'https://docs.google.com/forms/d/e/1FAIpQLSdrKJiyXZbC-gvHGw_VJ5XTHUyiztUDG2ICX07R88lY1fZInA/viewform?usp=sf_link';
          } else {
              console.error('Failed to register for the event.');
          }
      })
      .catch(error => {
          console.error('Error registering for the event:', error);
      });
  }
</script>


