          <label class="signuplab">Section</label>
          <input type="text" name="section" placeholder="Section" id="email1" class="ppp" required>
          <label class="signuplab">Enter your password</label>
          <div class="password-wrapper">
            <input type="password" name="pass" placeholder="Enter your Password" id="password1" class="ppp" required>
            <label for="show-password1">Show Password</label>
            <input type="checkbox" id="show-password1">
          </div>
          <label class="signuplab">Re-enter your password</label>
          <div class="password-wrapper">
            <input type="password" placeholder="Confirm your Password" id="password2" class="ppp" required>
            <label for="show-password2">Show Password</label>
            <input type="checkbox" id="show-password2">
          </div>
          <input style="width: 100%;" type="submit" class="signupbutt" value="Sign Up" id="signup-btn">
          <div id="error-message" style="color: red;"></div>
        </form>
        <script>
          // Form submission event listener
          document.getElementById('signup-form').addEventListener('submit', function (event) {
            event.preventDefault(); // Prevent form submission
        
            // Clear error message
            document.getElementById('error-message').textContent = '';
            // Validate email
            var email = document.getElementById('email1').value;
            var isEmailValid = /^[^\s@]+@[^\s@]+\.[^\s@]+$/.test(email);

            if (!isEmailValid) {
              document.getElementById('error-message').textContent =
                'Please enter a valid email address.';
              return;
            }
        
            // Validate password
            var password = document.getElementById('password1').value;
            var confirmPassword = document.getElementById('password2').value;
        
            var hasLetter = /[a-zA-Z]/.test(password);
            var hasCapitalLetter = /[A-Z]/.test(password);
            var isEightCharsLong = password.length >= 8;
        
            if (!hasLetter || !hasCapitalLetter || !isEightCharsLong) {
              document.getElementById('error-message').textContent =
                'Password must contain at least 1 letter, 1 capital letter, and be 8 characters long.';
              return;
            }
        
            if (password !== confirmPassword) {
              document.getElementById('error-message').textContent =
                'Passwords do not match.';
              return;
            }
            // Validate USN
            var usn = document.getElementById('usn').value;
              var isUSNValid = /^1BM.{7}$/.test(usn);

              if (!isUSNValid) {
            document.getElementById('error-message').textContent =
              'USN must start with "1BM" and be 10 characters long.';
            return;
               }
        
            // Submit the form if password is valid
            this.submit();
          });
        </script>
        
        
